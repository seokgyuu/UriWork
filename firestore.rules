rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 테스트용: 모든 컬렉션에 대해 임시로 모든 접근 허용
    match /{document=**} {
      allow read, write: if true;
    }
    
    // 사용자 컬렉션에 대한 명시적 규칙 (테스트 후 복원 예정)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // 직원 선호도 컬렉션에 대한 명시적 규칙 (테스트 후 복원 예정)
    match /employee_preferences/{document} {
      allow read, write: if true;
    }
    
    // 부서 정보 컬렉션에 대한 명시적 규칙 (테스트 후 복원 예정)
    match /departments/{document=**} {
      allow read, write: if true;
    }
  }
} 